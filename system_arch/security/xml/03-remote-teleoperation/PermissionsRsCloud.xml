<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.3.0/dds_security_permissions.xsd">
    <permissions>
        <grant name="RsCloudParticipant">
            <subject_name>/C=US/ST=CA/O=Company Name/emailAddress=support@company_name.com/CN=RsCloud</subject_name>
            <validity>
                <!-- Format is CCYY-MM-DDThh:mm:ss[Z|(+|-)hh:mm] in GMT -->
                <not_before>2024-06-01T13:00:00</not_before>
                <not_after>2037-06-01T13:00:00</not_after>
            </validity>
            <allow_rule>
                <domains>
                    <id>1</id>
                </domains>
                <!-- Best practice: use the right topics your DomainParticipant publishes and subscribes to -->
                <!-- This is not a best practice, but for this reference architecture, we'll use (*) for simplicity -->
                <publish>
                    <topics>
                        <topic>*</topic>
                    </topics>
                </publish>
                <subscribe>
                    <topics>
                        <topic>*</topic>
                    </topics>
                </subscribe>
            </allow_rule>
            <default>DENY</default>
        </grant>
    </permissions>
</dds>