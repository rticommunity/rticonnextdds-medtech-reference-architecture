  <qos_library name="CommonLibrary">
    <qos_profile name="CommonSecurityConfig">
      <?rti-qos_snippet?>
      <domain_participant_qos>
        <base_name>
          <element>BuiltinQosSnippetLib::Feature.Security.Enable</element>
        </base_name>
        <property>
          <value>
            <!-- For these demos, we only use 1 permissions CA -->
            <element>
              <name>dds.sec.access.permissions_ca</name>
              <value>file:../security/ca/CaIdentity.pem</value>
            </element>
            <!-- For these demos, we only use 1 CA -->
            <element>
              <name>dds.sec.auth.identity_ca</name>
              <value>file:../security/ca/CaIdentity.pem</value>
            </element>
          </value>
        </property>
      </domain_participant_qos>
    </qos_profile>

    <qos_profile name="Demo1and2CommonSecurityConfig" base_name="CommonSecurityConfig">
      <?rti-qos_snippet?>
      <domain_participant_qos>
        <property>
          <value>
            <!-- For these demos, we only use 1 governance file per domain -->
            <element>
              <name>dds.sec.access.governance</name>
              <value>file:../security/xml/signed/SignedGovernanceDomain0.p7s</value>
            </element>
          </value>
        </property>
      </domain_participant_qos>
    </qos_profile>

